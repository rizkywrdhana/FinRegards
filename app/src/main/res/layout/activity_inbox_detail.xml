<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InboxDetailActivity">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txt_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textSize="20sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_username"
            android:layout_marginVertical="18dp"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@id/txt_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\@username"
            android:textSize="20sp"
            android:ems="10" />

        <TextView
            android:id="@+id/txt_regard"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@+id/view_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regards:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:ems="10" />

        <TextView
            android:id="@+id/view_regard"
            android:layout_marginVertical="18dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@+id/txt_regard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Regards"
            android:textSize="20sp"
            android:ems="10" />

        <TextView
            android:id="@+id/txt_photo"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@+id/view_regard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:ems="10" />

        <ImageView
            android:id="@+id/view_photo"
            android:layout_marginVertical="18dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@+id/txt_photo"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>