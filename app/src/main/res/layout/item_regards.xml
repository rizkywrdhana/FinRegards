                    android:id="@+id/r_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="12dp"
                    android:textSize="18sp"
                    android:text="message"
                    android:ellipsize="end"
                    android:maxLines="3"
